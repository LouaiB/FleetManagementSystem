@model FleetManagementWebApplication.Models.Vehicle

@{
    ViewData["Title"] = "Create";
    Layout = "LayoutManager";
}
<style>
    .box {
        text-align: left;
        position: relative;
        top: 40px;
        padding: 10px 30px;
        width: 60%;
     padding-bottom:40px;
        background: #FFF;
        
    }
</style>
<div class="box effect6">
    <h3>Registeration</h3>

    <div class="w3-container w3-padding">
        <form asp-controller="Vehicles" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h6 class="w3-opacity">LicensePlate :</h6>
            <input asp-for="LicensePlate" style="width:100%" class="w3-border w3-padding" value="A45fHT8">
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
            <h6 class="w3-opacity"><label asp-for="Make"></label></h6>
            <input asp-for="Make" style="width:100%" class="w3-border w3-padding" value="BMW">
            <span asp-validation-for="Make" class="text-danger"></span>
            <span asp-validation-for="Make" class="text-danger"></span>

            <h6 class="w3-opacity"><label asp-for="Model"></label></h6>
            <input asp-for="Model" style="width:100%" class="w3-border w3-padding" value="2018">
            <span asp-validation-for="Model" class="text-danger"></span>

            <h6 class="w3-opacity">Purchase Date :</h6>
            <input asp-for="purchaseDate" style="width:100%" class="w3-border w3-padding" value="2/3/2019">
            <span asp-validation-for="purchaseDate" class="text-danger"></span>
            <hr>
            <h3>Specifications</h3>
            <h6 class="w3-opacity"><label asp-for="Odometer"></label></h6>
            <input asp-for="Odometer" style="width:85%" class="w3-border w3-padding" value="100">&nbsp;&nbsp;&nbsp;&nbsp;Km
            <span asp-validation-for="Odometer" class="text-danger"></span>

            <h6 class="w3-opacity"><label asp-for="PayLoad"></label></h6>
            <input asp-for="PayLoad" style="width:85%" class="w3-border w3-padding" value="100">&nbsp;&nbsp;&nbsp;&nbsp;@ViewData["type"]

            <h6 class="w3-opacity"><label asp-for="EmissionsCO2"></label></h6>
            <input asp-for="EmissionsCO2" style="width:85%" class="w3-border w3-padding" value="10">&nbsp;&nbsp;&nbsp;&nbsp;G/Km
            <span asp-validation-for="EmissionsCO2" class="text-danger"></span>

            <h6 class="w3-opacity"><label asp-for="FuelConsumption"></label></h6>
            <input asp-for="FuelConsumption" style="width:85%" class="w3-border w3-padding" value="5">&nbsp;&nbsp;&nbsp;&nbsp;Litres/Km
            <span asp-validation-for="FuelConsumption" class="text-danger"></span>

            <br /><br /><br />

            <center>
                <button type="submit" class="w3-button w3-theme w3-large">
                    Done
                    <!-- <i class='fas fa-angle-double-right'></i> -->
                </button>
            </center>

        </form>

    </div>
</div>
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
